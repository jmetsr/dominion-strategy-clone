<!DOCTYPE html>
<html>
<head>
  <title>DominionStrategyClone</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <style>


  li, a, input:not(.radio), h1 {
    margin: 0;
    padding: 0;
    border: 0;
    font: inherit;
    color: inherit;
    text-decoration: inherit;
    background: transparent;
    -webkit-appearance: none;
    display: inline-block;
    cursor: pointer;
    list-style: none;
    outline: 0;
  }
  h1 {
    font-weight: bold;
    width: 100%;
  }
  .nav {

    float: left;
    padding: 25px 23px 25px 23px;
    height: 13px;
  }
  .home {

  }
  .nav-bar {
    width: 100%;
    height: 90px;
    background: #F0CFC5;
    padding: 3px;
  }

  input:not(.submit) {
    border: 1px solid black;
  }

  input:not(.radio), a {
    font-weight: bold;
    padding: 8px;
    border: 3px solid black;
  }
  .topic-container{
       width: 100%;
       height: 72px;
       border: 1px solid black;
       background: #DEDEE2;

   }
   .topic {
     float: left;
     display: block;
     width: 120px;
     margin-left: 300px;
     margin-top: 6px;
     margin-bottom: 6px;
     height: 60px;
   }
   a:active, input:active {
     background: green;
   }


  </style>
</head>
<body>

<h1>Dominion Strategy Forum</h1>
<%= flash.now[:errors] %>



<% if logged_in %>
  <div class="hello">
  <%= "Hello #{current_user.username} "%>
  </div>
<% end %>

<ul class="nav-bar">
  <li class="nav home">
<%= link_to("HOME", boards_url) %>
  </li>
<% if logged_in %>
  <form action="<%= session_url %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
  <li class ="nav">
      <input type="submit" value="LOGOUT" class="submit">
  </li>
  </form>


  <li class="nav">
  <%= link_to("MEMBERS", users_url) %>
  </li>

  <li class="nav">
    <%= link_to("PROFILE", user_url(current_user))%>
  </li>

  <% if current_user.admin %>

  <li class="nav">
    <%= link_to('CREATE BOARD', new_board_url) %>
  </li>

  <% end %>

<% else %>

 <li class="nav">
   <%= link_to('REGISTER', new_user_url) %>
 </li>

 <li class="nav">
   <%= link_to('LOGIN', new_session_url) %>
 </li>

<% end %>
</ul>


<%= yield %>

</body>
</html>
