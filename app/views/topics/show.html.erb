<style>
  .new-topic {
    background: #D6D5DB;
    padding: 4px;
    display: block;
    margin: auto;
    width: 75px;
  }
  .new-topic-container {
    width: 100%;
    height: 75px;
    padding: 22px;
  }
</style>


<h1> <%= @topic.title %> </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
  </tr>
<% @topic.subjects.each do |subject| %>
   <tr> <td><%= link_to(subject.title, topic_subject_url(@topic,subject)) %></td>
     <% if subject.user != nil%>
       <td><%= link_to(subject.user.username, user_url(subject.user)) %></td>
     <% else %>
       <td>The author of this Topic has deleted their profile</td>
     <% end %>
   </tr>
<% end %>
</table>
<% if logged_in %>
<div class="new-topic-container">
<%= link_to("New Topic", new_topic_subject_url(@topic), class: "new-topic") %>
</div>
<% end %>

