<h1><%= Board.find_by_id(params[:board_id]).title %></h1>
<h1> Start new topic </h1>
<form action="<%= board_topics_url%>" method="post">
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"><br>
    <label> Title
<input type="text" name="topic[title]" value="<% @topic.title %>">
    </label><br><br>
    <label> Body <br>
<textarea rows="12" cols="80" name="topic[body]" value="<% @topic.body %>"></textarea>
    </label><br>
<input type="hidden" name="topic[user_id]" value="<%= current_user.id %>">
<input type="hidden" name="topic[board_id]" value="<%= params[:board_id] %>">
<input type="submit" value="post">
</form>